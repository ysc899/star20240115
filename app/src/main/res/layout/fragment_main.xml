<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/n_bg_gradient"
    tools:context=".ui.main.MainFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="102dp"
        android:layout_height="74dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/n_logo_top" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:background="@android:color/transparent"
        tools:layout_editor_absoluteX="1dp">

        <ImageButton
            android:id="@+id/btnVisitPlan"
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/n_menu_icon_01"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/btnTransaction"
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/n_menu_icon_02"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/btnBagSend"
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/n_menu_icon_03"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintTop_toBottomOf="@+id/btnVisitPlan"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageSending"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="28dp"
            android:background="@android:color/transparent"
            android:src="@drawable/n_icon_3"
            app:layout_constraintStart_toStartOf="@+id/btnBagSend"
            app:layout_constraintTop_toTopOf="@+id/btnBagSend" />

        <ImageButton
            android:id="@+id/btnCustomer"
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/n_menu_icon_04"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintTop_toBottomOf="@+id/btnTransaction"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageAccount"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="28dp"
            android:background="@android:color/transparent"
            android:src="@drawable/n_icon_4"
            app:layout_constraintStart_toStartOf="@+id/btnCustomer"
            app:layout_constraintTop_toTopOf="@+id/btnCustomer" />

        <ImageButton
            android:id="@+id/btnMemo"
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/n_menu_icon_05"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintTop_toBottomOf="@+id/btnBagSend"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/btnContact"
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/n_menu_icon_06"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintTop_toBottomOf="@+id/btnCustomer"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageContact"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="28dp"
            android:background="@android:color/transparent"
            android:src="@drawable/n_icon_6"
            app:layout_constraintStart_toStartOf="@+id/btnContact"
            app:layout_constraintTop_toTopOf="@+id/btnContact" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageButton
        android:id="@+id/btnConfig"
        android:layout_width="87dp"
        android:layout_height="27dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/n_btn_config" />



</androidx.constraintlayout.widget.ConstraintLayout>